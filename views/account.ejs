<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecommerce Website</title>
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
</head>
<body>
  
  <!-- Header / Navbar -->
  <section id="header" class="container-fluid">
    <a href="#"><img src ="img/logo.png" class="logo" alt=""></a>
    <div id="navbar-container">
        <ul id="navbar">
          <li><a href="/">Home</a></li>
          <li><a href="/shop">Shop</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
          <% if (username === "admin") { %>
            <li><a href="/products">Products Management</a></li>
            <li><a href="/categories">Categories Management</a></li>
          <% } %>
          <li id="lg-bag"><a href="/cart"><i class="bi bi-bag"></i></a></li>
          <% if (typeof username !== 'undefined') { %>
            <li id="lg-bag"><a class="active" href="/account"><i class="bi bi-person-circle"></i></a></li>
            <li id="lg-bag"><a href="/logout">Logout</a></li>
          <% } else { %>
            <li id="lg-bag"><a href="/login"><i class="bi bi-person-circle"></i></a></li>
          <% } %>
          <i id="close" class="bi bi-x-lg"></i>
        </ul>
      </div>

    <div id="mobile">
        <a href="/cart"><i class="bi bi-bag"></i></a>
        <i id="bar" class="bi bi-list"></i>
    </div>

  </section>

  <!-- Main -->
  <section id="page-header" class="about-header">
    <h2>Welcome, <%= username %>!</h2>
    <p>
      Email: <span class="info-item"><%= email %></span>
      Phone: <span class="info-item"><%= phoneNumber %></span>
      Address: <span class="info-item"><%= address %></span>
    </p>
  </section>

  <section id="cart" class="section-p1">
    <% if (orders && orders.length > 0) { %>
        <h2>Your Order History</h2>
        <table>
            <thead>  <!-- tr = table row  | tb = table data | thead = header row -->
                <tr> 
                    <td>Order ID</td>
                    <td>Date</td>
                    <td>Total</td>
                </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order) { %>
                <tr>
                    <td><a href="/order-details/<%= order._id %>"><%= order._id %></a></td>
                    <td><%= order.orderDate.toDateString() %></td>
                    <td>$<%= order.total %></td>
                </tr>
              <% }) %>
            </tbody>
        </table>
    <% } else { %>
      <h2>No Orders Were Made</h2>
    <% } %>
  </section>

  <!-- Newsletter Sign Up -->
  <section id="newsletter" class="section-p1 section-m1">
    <div class="newstext">
        <h4>Sign Up For Newsletters</h4>
        <p>Get E-mail updates about our latest shop and <span>spaciel offers.</span></p>
    </div>
    <div class="form">
        <input  type="text" placeholder="Your Email Adress">
        <button class="normal">Sign Up</button>
    </div>
  </section>

  <!-- Footer -->
  <footer class="section-p1">
    <div class="col contact">
        <img class="logo" src="img/logo.png" alt="">
        <h4>Contact</h4>
        <p><strong>Adress:</strong> 1234 Elm Street, Springfield, USA</p>
        <p><strong>Phone:</strong> +1 (555) 123-4567</p>
        <p><strong>Hours:</strong> Monday - Friday, 8:00 AM - 6:00 PM</p>
        <div class="follow">
            <h4>Follow Us</h4>
            <div class="icon">
                <i class="bi bi-facebook"></i>
                <i class="bi bi-twitter"></i>
                <i class="bi bi-instagram"></i>
                <i class="bi bi-pinterest"></i>
                <i class="bi bi-youtube"></i>
            </div>
        </div>
    </div>

    <div class="col about">
        <h4>About</h4>
        <a href="/about">About Us</a>
        <a href="#">Delivery Information</a>
        <a href="#">Privacy Policy</a>
        <a href="#">Terms & Conditions</a>
        <a href="/contact">Contact Us</a>
    </div>

    <div class="col my-account">
        <h4>My Account</h4>
        <a href="#">Sign In</a>
        <a href="#">View Cart</a>
        <a href="#">My Wishlist</a>
        <a href="#">Track My Order</a>
        <a href="#">Help</a>
    </div>

    <div class="col install">
        <h4>Install App</h4>
        <p>From App Store or Google Play</p>
        <div class="row">
            <img src="img/pay/play.jpg" alt="">
            <img src="img/pay/app.jpg" alt="">
        </div>
        <p>Secured Payment Getways</p>
        <img src="img/pay/pay.png" alt="">
    </div>

    <div class="copyright">
        <p>&copy; 2024 Stylish Threads Clothing Store. All Rights Reserved.</p>
    </div>
  </footer>

  <script src="./js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
