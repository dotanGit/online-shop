<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecommerce Website</title>
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
</head>
<body>
  
  <!-- Header / Navbar -->
  <section id="header" class="container-fluid">
    <a href="#"><img src ="img/logo.png" class="logo" alt=""></a>
    <div id="navbar-container">
        <ul id="navbar">
          <li><a href="/">Home</a></li>
          <li><a href="/shop">Shop</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
          <% if (username === "admin") { %>
            <li><a href="/products">Products Management</a></li>
            <li><a href="/categories">Categories Management</a></li>
          <% } %>
          <li id="lg-bag"><a href="/cart"><i class="bi bi-bag"></i></a></li>
          <% if (typeof username !== 'undefined') { %>
            <li id="lg-bag"><a class="active" href="/account"><i class="bi bi-person-circle"></i></a></li>
            <li id="lg-bag"><a href="/logout">Logout</a></li>
          <% } else { %>
            <li id="lg-bag"><a href="/login"><i class="bi bi-person-circle"></i></a></li>
          <% } %>
          <i id="close" class="bi bi-x-lg"></i>
        </ul>
      </div>

    <div id="mobile">
        <a href="/cart"><i class="bi bi-bag"></i></a>
        <i id="bar" class="bi bi-list"></i>
    </div>

  </section>


  <h1>My Account</h1>
  <p>Welcome, <%= username %>!</p>
  <p>Email: <%= email %></p>
  <p>Phone: <%= phoneNumber %></p>
  <p>Address: <%= address %></p>


  <h2>Your Order History</h2>
  <% if (orders && orders.length > 0) { %>
      <ul>
          <% orders.forEach(function(order) { %>
              <li>
                  <strong>Order ID:</strong> <%= order._id %> <br>
                  <strong>Date:</strong> <%= order.orderDate.toDateString() %> <br>
                  <strong>Total:</strong> $<%= order.total %> <br>

                  <h4>Items:</h4>
                  <ul>
                      <% order.items.forEach(function(item) { %>
                          <li>
                              <strong>Product ID:</strong> <%= item.productId %>, 
                              <strong>Quantity:</strong> <%= item.quantity %>, 
                              <strong>Price:</strong> $<%= item.price %>
                          </li>
                      <% }) %>
                  </ul>
              </li>
          <% }) %>
      </ul>
  <% } else { %>
      <p>No orders found.</p>
  <% } %>


  <section id="cart" class="section-p1">
    <% if (orders && orders.length > 0) { %>
    <table>
        <thead>  <!-- tr = table row  | tb = table data | thead = header row -->
            <tr> 
                <td>Order ID</td>
                <td>Date</td>
                <td>Total</td>
            </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
            <tr>
                <td><a href="/order-details/<%= order._id %>"><%= order._id %></a></td>
                <td><%= order.orderDate.toDateString() %></td>
                <td>$<%= order.total %></td>
            </tr>
          <% }) %>
        </tbody>
    </table>
    <% } else { %>
      <p>No orders found.</p>
    <% } %>
</section>


  <p><a href="/logout">Logout</a></p>

  <script src="./js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
