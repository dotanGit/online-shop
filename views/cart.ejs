<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecommerce Website</title>
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
</head>
<body>

    <!-- Header / Navbar -->
    <section id="header" class="container-fluid">
        <a href="#"><img src ="img/logo.png" class="logo" alt=""></a>
        <div id="navbar-container">
            <ul id="navbar">
              <li><a href="/">Home</a></li>
              <li><a href="/shop">Shop</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact</a></li>
              <% if (username === "admin") { %>
                <li><a href="/products">Products Management</a></li>
                <li><a href="/categories">Categories Management</a></li>
              <% } %>
              <li id="lg-bag"><a class="active" href="/cart"><i class="bi bi-bag"></i></a></li>
              <% if (typeof username !== 'undefined') { %>
                <li id="lg-bag"><a href="/account"><i class="bi bi-person-circle"></i></a></li>
                <li id="lg-bag"><a href="/logout">Logout</a></li>
              <% } else { %>
                <li id="lg-bag"><a href="/login"><i class="bi bi-person-circle"></i></a></li>
              <% } %>
              <i id="close" class="bi bi-x-lg"></i>
            </ul>
          </div>

        <div id="mobile">
            <a class="active" href="/cart"><i class="bi bi-bag"></i></a>
            <i id="bar" class="bi bi-list"></i>
        </div>

    </section>

    <!-- Main -->
     <section id="page-header" class="about-header">
        <h2>#lets Shop</h2>
        <p>SHOP NOW, get free delivery today!</p>
     </section>

     <section id="cart" class="section-p1">
        <% if (cartItems.length !== 0) { %>
        <table>
            <thead>  <!-- tr = table row  | tb = table data | thead = header row -->
                <tr> 
                    <td>Remove</td>
                    <td>Image</td>
                    <td>Product</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>Subtotal</td>
                </tr>
            </thead>
            <tbody>
                <% cartItems.forEach(item => { %>
                    <tr data-product-id="<%= item.productId %>">
                        <td><a href="#" class="remove-item" data-product-id="<%= item.productId %>"><i class="bi bi-x-circle"></i></a></td>
                        <td><img src="img/products/f1.jpg" alt=""></td>
                        <td><%= item.description %></td>
                        <td>$<%= item.productPrice.toFixed(2) %></td>
                        <td><input type="number" value="<%= item.quantity %>" min="1"></td>
                        <td>$<%= item.totalPrice.toFixed(2) %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <section id="cart-add" class="section-p1">
            <div id="coupon">
                <h3>Apply Coupon</h3>
                <div>
                    <input type="text" placeholder="Enter Your Coupon">
                    <button class="normal">Apply</button>
                </div>
            </div>
            <div id="subtotal">
                <h3>Cart Total</h3>
                <table>
                    <tr>
                        <td>Cart Subtotal</td>
                        <td>$<%= totalCartPrice %></td>
                    </tr>
                    <tr>
                        <td>Shipping</td>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <td><strong>Total</strong></td>
                        <td><strong>$<%= totalCartPrice %></strong></td>
                    </tr>
                </table>
                <button id="checkout-button" class="normal">Proceed To Checkout</button>
            </div>
        </section>
        <% } else { %>
            <section id="empty-cart" class="section-p1">
                <h1>Cart Is Empty</h1>
            </section>
        <% } %>
    </section>

    <!-- Footer -->
    <footer class="section-p1">
        <div class="col contact">
            <img class="logo" src="img/logo.png" alt="">
            <h4>Contact</h4>
            <p><strong>Adress:</strong> 1234 Elm Street, Springfield, USA</p>
            <p><strong>Phone:</strong> +1 (555) 123-4567</p>
            <p><strong>Hours:</strong> Monday - Friday, 8:00 AM - 6:00 PM</p>
            <div class="follow">
                <h4>Follow Us</h4>
                <div class="icon">
                    <i class="bi bi-facebook"></i>
                    <i class="bi bi-twitter"></i>
                    <i class="bi bi-instagram"></i>
                    <i class="bi bi-pinterest"></i>
                    <i class="bi bi-youtube"></i>
                </div>
            </div>
        </div>

        <div class="col about">
            <h4>About</h4>
            <a href="#">About Us</a>
            <a href="#">Delivery Information</a>
            <a href="#">Privacy Policy</a>
            <a href="#">Terms & Conditions</a>
            <a href="#">Contact Us</a>
        </div>

        <div class="col my-account">
            <h4>My Account</h4>
            <a href="#">Sign In</a>
            <a href="#">View Cart</a>
            <a href="#">My Wishlist</a>
            <a href="#">Track My Order</a>
            <a href="#">Help</a>
        </div>

        <div class="col install">
            <h4>Install App</h4>
            <p>From App Store or Google Play</p>
            <div class="row">
                <img src="img/pay/play.jpg" alt="">
                <img src="img/pay/app.jpg" alt="">
            </div>
            <p>Secured Payment Getways</p>
            <img src="img/pay/pay.png" alt="">
        </div>

        <div class="copyright">
            <p>&copy; 2024 Stylish Threads Clothing Store. All Rights Reserved.</p>
        </div>
    </footer>


    <!-- Checkout Modal -->
    <div class="modal fade" id="checkoutModal" tabindex="-1" role="dialog" aria-labelledby="checkoutModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="checkoutModalLabel">Checkout Successful</h4>
                </div>
                <div class="modal-body">    
                    Your order has been placed successfully.<br>
                    Total Price : $<%= totalCartPrice %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="continue-btn">Continue</button>
                </div>
            </div>
        </div>
    </div>

    <script src="./js/script.js"></script>
    <script src="./js/updateQuantity.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
